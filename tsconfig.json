{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext"],
    "types": ["vite/client", "jest"],
    "typeRoots": ["./node_modules/@types/", "./types"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "/@/*": ["src/*"],
      "/types/*": ["types/*"],
      "/build/*": ["build/*"],
      "/config/*": ["config/*"],
      "@gx-design/pro-hooks/*": ["src/hooks/*"],
      "@gx-design/pro-utils": ["src/components/_util/index.ts"],
      "@gx-design/pro-field*": ["src/components/GProField/index.tsx"],
      "@gx/pro-upload": ["src/components/GUpload/index.ts"],
      "@gx-pro/pro-card": ["src/components/GProCard/index.ts"],
      "@gx-pro/pro-table": ["src/components/GProTable/index.ts"],
      "@gx-pro/pro-layout": ["src/components/GProLayout/index.ts"],
    }
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "src/**/*.less",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js", ".history"]
}
